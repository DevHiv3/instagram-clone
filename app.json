{
  "expo": {
    "name": "instagram-clone",
    "slug": "tinder-clone",
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./assets/splash-screen-logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-screen-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#2f2f2f"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.instagramclone.app"
    },
    "android": {
      "package": "com.instagramclone.app",
      "googleServicesFile": "./google-services.json",
      "useNextNotificationsApi": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/splash-screen-logo.png",
        "backgroundColor": "#2f2f2f"
      },
      
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "87c9a1f0-9723-411c-80f4-9eeffde71f12"
      }
    },
    "scheme": "instagramclone",
    "owner": "dev.hiv3",
    "plugins": [
      "expo-secure-store",
      "@react-native-google-signin/google-signin",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/87c9a1f0-9723-411c-80f4-9eeffde71f12",
      "fallbackToCacheTimeout": 0
    }
  }
}
